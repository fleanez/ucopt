	<square>15</square>
	<repdetail>yes</repdetail>
</display>

<!--LAGRANGE RELAXATION PARAMETERS: -->
<lrtunning displayname="LR Tunning">
	<sub-alfa>0.9</sub-alfa>
	<sub-beta>0.05</sub-beta>
	<c-coef>0.002</c-coef>
	<eps-aug>200</eps-aug>
</lrtunning>

