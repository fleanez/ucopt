<ucoptions>

<!--DEFAULT GENERALS: -->
<general displayname="General Settings">
	<!--Installation Directory (ignored 29/10/05):-->
	<direct>C:\\Program Files\\UCOPT\\UCOPT 1.0\\</direct>
	<numunits>1000</numunits>
	<numperiods>24</numperiods>
	<timediv>60</timediv>
	<itermax>100</itermax>
	<itermaxnet>5</itermaxnet>
	<itertime>10</itertime>
	<priorsearch>feasible</priorsearch>
	<ramp>no</ramp>
	<spin>no</spin>
	<powerlimit>no</powerlimit>
	
	<!--Tolerance Settings:-->
	<tol-obj>0.0001</tol-obj>
	<tol-dg>0.0001</tol-dg>
	<tol-b>0.01</tol-b>

</general>

<!--DATABASE DEFAULTS: -->
<database displayname="DataBase">
	
	<usedb>no</usedb>
	<db-type>odbc</db-type>
	<db-name>.\examples\UC100-RTS.mdb</db-name>
	<db-loc>localhost</db-loc>
	<db-log>root</db-log>
	<db-pass></db-pass>
	<db-file>.\examples\RTS96-10_20_1</db-file>

</database>

<!--OPTIMIZER DEFAULTS: -->
<optimizer displayname="Optimizer">

	<generalopt displayname="General Optimizer">
		<opt-def>glpk</opt-def>
		<piece-wise>no</piece-wise>
		<heuristic>no</heuristic>
		<augmented>no</augmented>
		<primary-res>no</primary-res>
		<printlp>no</printlp>
	</generalopt>
	
	<!-- GLPK Optimization Engine Defaults -->
	<glpk displayname="GLPK">
		<!-- Installation Directory-->
		<glpk-direct>C:\\Program Files\\gnuwin32</glpk-direct>
		
		<!-- Primal LP Method-->
		<glpk-popt>simplex</glpk-popt>
		
		<!-- Primal Input File Type-->
		<glpk-piftype>freemps</glpk-piftype>
		
		<!-- Primal Input File Name-->
		<glpk-pifname>ucprimal.mps</glpk-pifname>
		
		<!-- Dos Batch File Interface-->
		<glpk-dosbat>ucprimal.bat</glpk-dosbat>
		
		<!-- Primal Output File Name-->
		<glpk-pofname>outuc.txt</glpk-pofname>
	</glpk>
	
	<!-- MINOS Optimization Engine Defaults -->
	<minos displayname="Minos">
		<!-- MINOS Installation Directory-->
		<minos-direct> </minos-direct>
		
		<!-- Linear Dos Batch File Interface (call lineal.exe)-->
		<minos-lineabat>lineal.exe>sys.log</minos-lineabat>
		
		<!-- Cuadratic Dos Batch File -->
		<minos-quadra>cuadra.exe>sys.log</minos-quadra>
	</minos>
	
</optimizer>

<!--RESULT WINDOW DISPLAY OPTIONS: -->
